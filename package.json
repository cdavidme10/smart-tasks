{
    "$schema": "https://json.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "dev": "vite",
        "openapi:validate": "swagger-cli validate ./resources/openapi/openapi.yaml",
        "openapi:generate": "npm run openapi:validate && swagger-cli bundle ./resources/openapi/openapi.yaml --outfile ./resources/openapi/apiBundle.json --type json",
        "setup:husky": "bash ./scripts/setup-husky.sh",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@tailwindcss/vite": "^4.0.0",
        "@vitejs/plugin-react": "^4.7.0",
        "autoprefixer": "^10.4.21",
        "axios": "^1.8.2",
        "concurrently": "^9.0.1",
        "eslint": "^9.32.0",
        "husky": "^8.0.0",
        "laravel-vite-plugin": "^2.0.0",
        "lint-staged": "^16.1.2",
        "postcss": "^8.5.6",
        "prettier": "^3.6.2",
        "tailwindcss": "^4.1.11",
        "vite": "^7.0.4"
    },
    "dependencies": {
        "i18next": "^25.3.2",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "react-i18next": "^15.6.1",
        "react-router-dom": "^7.7.1",
        "swagger-cli": "^4.0.4"
    }
}
